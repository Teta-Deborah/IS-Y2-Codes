//Answer for Q10
package deborah.assignment;

/**
 *
 * @author deborah
 */
public class Question10 {
 public static void main(String[] args) {
        int[] numbers = {34, 23, 12, 45, 67, 89, 234, 26, 10, 30, 43};
        int largest = numbers[0];

        for (int num : numbers) {
            if (num > largest) {
                largest = num;
            }
        }
        System.out.println("The largest element is: " + largest);
    }
}   
