//Answer for Q6
package deborah.assignment;

/**
 *
 * @author deborah
 */
public class Question6 {
    public static void main(String[] args) {
        for (int i = 1; i <= 7; i++) {
            
            for (int j = 7; j > i; j--) {
                System.out.print(" ");
            }
            for (int k = 1; k <= i; k++) {
                System.out.print(k);
            }
            System.out.println();
        }
    }
} 

